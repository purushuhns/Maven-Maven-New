<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <FaultRules>
        <FaultRule name="unauthorized_error">
            <Step>
                <Name>JS.FaultHandler</Name>
            </Step>
        </FaultRule>
    </FaultRules>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>VAK.VerifyApiKey</Name>
            </Step>
            <Step>
                <Name>SA.SpikeArrest</Name>
            </Step>
            <Step>
                <Name>QU.ImposeQuota</Name>
            </Step>
            <Step>
                <Name>AM.RemoveParameters</Name>
            </Step>
            <Step>
                <Name>basicAuth</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <Flows>
        <Flow name="Logs">
            <Description/>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/logs") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="UnknownResource">
            <Description>Unknown Resource</Description>
            <Request>
                <Step>
                    <Name>RF.UnknownResource</Name>
                </Step>
            </Request>
            <Response/>
            <Condition/>
        </Flow>
    </Flows>
    <HTTPProxyConnection>
        <BasePath>/dihlogging/v1/dih</BasePath>
        <Properties/>
        <VirtualHost>default</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>