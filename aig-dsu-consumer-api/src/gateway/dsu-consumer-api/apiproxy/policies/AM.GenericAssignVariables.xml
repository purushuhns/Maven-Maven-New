<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="false" enabled="true" name="AM.GenericAssignVariables">
    <DisplayName>AM.GenericAssignVariables</DisplayName>
    <Remove>
        <Headers>
            <Header name="apikey"/>
        </Headers>
        <!--
        <Headers>
            <Header name="X-Forwarded-For"/>
        </Headers>
         -->
    </Remove>
    <!--This variable suffixed to backend url while rewriting the target url -->
    <AssignVariable>
        <Name>urlSuffix</Name>
        <Ref>proxy.pathsuffix</Ref>
    </AssignVariable>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo createNew="false" transport="http" type="request"/>
</AssignMessage>